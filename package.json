{
  "name": "bitmovin-player-react",
  "version": "1.0.0",
  "description": "A React component that creates an instance of Bitmovin player",
  "license": "MIT",
  "author": "Bitmovin",
  "homepage": "https://github.com/bitmovin/bitmovin-player-react#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitmovin/bitmovin-player-react.git"
  },
  "bugs": {
    "url": "https://github.com/bitmovin/bitmovin-player-react/issues"
  },
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -fr dist/* && tsc -p tsconfig.build.esm.json && tsc -p tsconfig.build.cjs.json && ./addPackageType.sh",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest"
  },
  "peerDependencies": {
    "bitmovin-player": ">=8.0.0",
    "bitmovin-player-ui": ">=3.0.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.75",
    "@types/react-dom": "^18.2.24",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4"
  },
  "keywords": [
    "bitmovin",
    "player",
    "react"
  ],
  "files": [
    "dist",
    "README.md"
  ]
}
